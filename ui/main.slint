import { Button } from "std-widgets.slint";
import {CreateDbWindow} from "createdb-window.slint";
import {AuthenticateWindow} from "authenticate-window.slint";
import {MainWindow} from "grid.slint";

export enum Page {
    CreateDb,
    Authenticate,
    Passlock
}

export component EntryWindow inherits Window {
    title: "PassLock";
    min-width: 1920px;
    min-height: 1080px;
    icon: @image-url("../resources/ico.png");

    in-out property <Page> current_page: Page.CreateDb;


    if current_page == Page.CreateDb: CreateDbWindow{}
    if current_page == Page.Authenticate: AuthenticateWindow{}
    if  current_page == Page.Passlock:  MainWindow{}
}